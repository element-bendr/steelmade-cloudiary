# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# Development/Production Mode
NODE_ENV=development # Change to 'production' for production deployment

# Storage Configuration
STORAGE_MODE=local # Change to 'cloud' for production

# AWS S3 Configuration (Required for production)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=your-region # e.g., us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Local Storage Configuration (Development)
LOCAL_STORAGE_PATH=public/uploads

# File Limits
MAX_FILE_SIZE=10485760 # 10MB
MAX_FILES_PER_REQUEST=10

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60 # seconds
