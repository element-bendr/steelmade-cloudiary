{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["modules/*/src"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "declaration": true
  }
}